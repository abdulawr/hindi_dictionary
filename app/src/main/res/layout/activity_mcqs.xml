<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical"
    tools:context=".MCQS">

   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_marginTop="20dp"
       android:id="@+id/top"
       android:layout_alignParentTop="true"
       android:layout_height="wrap_content">

       <TextView
           android:layout_width="60dp"
           android:background="@drawable/timer_background"
           android:layout_height="60dp"
           android:gravity="center"
           android:text="60"
           android:id="@+id/timer"
           android:textColor="@color/text"
           android:textSize="25dp"
           android:layout_marginLeft="16dp"
           android:layout_alignParentLeft="true"/>

       <TextView
           android:layout_width="60dp"
           android:layout_height="60dp"
           android:gravity="center"
           android:text="40/50"
           android:id="@+id/q_number_show"
           android:textSize="18dp"
           android:layout_marginRight="16dp"
           android:textColor="@color/text"
           android:layout_alignParentRight="true"/>

   </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_below="@id/top"
        android:id="@+id/second"
        android:layout_height="wrap_content">

        <FrameLayout
            xmlns:ads="http://schemas.android.com/apk/res-auto"
            android:id="@+id/ad_view_container"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true">
        </FrameLayout>

    </RelativeLayout>

<ScrollView
    android:layout_width="match_parent"
    android:layout_below="@id/second"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardBackgroundColor="#fff"
            android:elevation="8dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:divider="@android:color/transparent"
            android:dividerHeight="0.0px"
            android:clipToPadding="false"
            android:clipChildren="false"
            app:cardElevation="10dp"
            android:background="#fff"
            app:cardPreventCornerOverlap="false">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:textSize="18sp"
                    android:layout_marginTop="5dp"
                    android:paddingLeft="10dp"
                    android:textColor="@color/text"
                    android:layout_height="wrap_content"
                    android:text="Find meaning of given word ?"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                   android:id="@+id/question"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:textStyle="bold"
                    android:clickable="true"
                    android:text="Q 1 : Welcome to the school top"
                    android:textColor="@color/text"
                    android:textSize="18sp"
                    />

            </LinearLayout>

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardBackgroundColor="#fff"
            android:elevation="8dp"
            android:layout_marginTop="35dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:divider="@android:color/transparent"
            android:dividerHeight="0.0px"
            android:clipToPadding="false"
            android:clipChildren="false"
            app:cardElevation="10dp"
            android:background="#fff"
            app:cardPreventCornerOverlap="false">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:gravity="center"
                    android:background="#fff"
                    android:clickable="true"
                    android:id="@+id/ans1"
                    android:text="Welcome to the school 1"
                    android:textColor="@color/text"
                    android:textSize="18sp"
                    />

            </LinearLayout>

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardBackgroundColor="#fff"
            android:elevation="8dp"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:divider="@android:color/transparent"
            android:dividerHeight="0.0px"
            android:clipToPadding="false"
            android:clipChildren="false"
            app:cardElevation="10dp"
            android:background="#fff"
            app:cardPreventCornerOverlap="false">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:background="#fff"
                    android:clickable="true"
                    android:id="@+id/ans2"
                    android:gravity="center"
                    android:text="Welcome to the school 2"
                    android:textColor="@color/text"
                    android:textSize="18sp"
                    />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardBackgroundColor="#fff"
            android:elevation="8dp"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:divider="@android:color/transparent"
            android:dividerHeight="0.0px"
            android:clipToPadding="false"
            android:clipChildren="false"
            app:cardElevation="10dp"
            android:background="#fff"
            app:cardPreventCornerOverlap="false">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:background="#fff"
                    android:text="Welcome to the school 3"
                    android:clickable="true"
                    android:gravity="center"
                    android:id="@+id/ans3"
                    android:textColor="@color/text"
                    android:textSize="18sp"
                    />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardBackgroundColor="#fff"
            android:elevation="8dp"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:divider="@android:color/transparent"
            android:dividerHeight="0.0px"
            android:clipToPadding="false"
            android:clipChildren="false"
            app:cardElevation="10dp"
            android:background="#fff"
            app:cardPreventCornerOverlap="false">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:background="#fff"
                    android:text="Welcome to the school 4"
                    android:textColor="@color/text"
                    android:textSize="18sp"
                    android:id="@+id/ans4"
                    android:gravity="center"
                    android:clickable="true"
                    />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>


<RelativeLayout
    android:layout_width="match_parent"
    android:background="@color/colorPrimary"
    android:layout_alignParentBottom="true"
    android:layout_height="65dp">

    <Button
        android:layout_width="120dp"
        android:layout_height="45dp"
        android:padding="8dp"
        android:text="Result"
        android:textAllCaps="false"
        android:layout_marginLeft="16dp"
        android:onClick="Result"
        android:textColor="@color/text"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:background="@drawable/bac"/>

    <Button
        android:layout_width="120dp"
        android:layout_centerVertical="true"
        android:layout_height="45dp"
        android:textAllCaps="false"
        android:onClick="Skip"
        android:layout_marginRight="16dp"
        android:text="Skip"
        android:textColor="@color/text"
        android:layout_alignParentRight="true"
        android:padding="8dp"
        android:background="@drawable/bac"/>


</RelativeLayout>

</RelativeLayout>
